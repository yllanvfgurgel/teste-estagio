{% extends 'layout.njk' %}

{% block content %}
<a href="/users/create" class="new-user-button">novo usuário</a>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Nome do Usuário</th>
            <th>Email</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{user.name}}</td>
            <td>{{user.email}}</td>
                <td>
                    <div class="buttons-index">
                        <a href="/users/{{user.id}}/edit">editar</a>
                        <form class="form-delete" action="/users?_method=delete" method="post">
                            <input type="hidden" name="id" value="{{user.id}}">
                            <button type="submit" class="delete-user-button">deletar</button>
                        </form>
                    </div>
                </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
